@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments </h1>
<br />
<br />

<a asp-action="Index" asp-controller="Department" class="btn btn-primary ">Create New Department</a>
<br />

@if (Model.Count()>0)
{
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation )</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            <tr>
                @foreach (var department in Model)
                {
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                        <a asp-action="Details" asp-controller="Department " asp-route-id="@department.Id" class="btn btn-success">
                            <i class=" fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Department " asp-route-id="@department.Id" class="btn btn-warning">
                            <i class=" fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Department " asp-route-id="@department.Id" class="btn btn-danger">
                            <i class=" fas fa-trash"></i>Delete
                        </a>
                    </td>
                }
            </tr>

        </tbody>
    </table>
} else
{   
    <div class = "  mt-3 alert alert-warning">
       <h4> There is No Departments!</h4>
    </div>
}










